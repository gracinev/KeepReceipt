<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nevadagraci.keepreceipt.ViewReceipt"
    android:background="@drawable/green_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="View Receipt"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large" />


    <Spinner
        android:id="@+id/spn_category"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:textAlignment="center">

    </Spinner>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="30dp">

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Reciept "
                android:textSize="18dp" />

            <TextView
                android:padding="3dip"
                android:text="#1"
                tools:textSize="18dp" />

            <TextView
                android:id="@+id/txt_receipt_1"
                android:hint="Title"
                android:padding="3dip" />

            <Button
                android:id="@+id/btn_view_1"
                android:enabled="true"
                android:padding="3dip"
                android:text="View" />

            <TextView
                android:id="@+id/txt_total_receipt_1"
                android:hint="Total"
                android:padding="3dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Receipt "
                android:textSize="18dp" />

            <TextView
                android:padding="3dip"
                android:text="#2"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_receipt_2"
                android:hint="Title"
                android:padding="3dip" />

            <Button
                android:id="@+id/btn_view_2"
                android:padding="3dip"
                android:text="View" />

            <TextView
                android:id="@+id/txt_total_receipt_2"
                android:hint="Total"
                android:padding="3dip" />
        </TableRow>


        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Receipt "
                android:textSize="18dp" />

            <TextView
                android:padding="3dip"
                android:text="#3" />

            <TextView
                android:id="@+id/txt_receipt_3"
                android:hint="Title"
                android:padding="3dip" />

            <Button
                android:id="@+id/btn_view_3"
                android:padding="3dip"
                android:text="View" />

            <TextView
                android:id="@+id/txt_total_receipt_3"
                android:hint="Total"
                android:padding="3dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Receipt "
                android:textSize="18dp" />

            <TextView
                android:padding="3dip"
                android:text="#4"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_receipt_4"
                android:hint="Title"
                android:padding="3dip" />

            <Button
                android:id="@+id/btn_view_4"
                android:padding="3dip"
                android:text="View" />

            <TextView
                android:id="@+id/txt_total_receipt_4"
                android:hint="Total"
                android:padding="3dip" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Total spent: "
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_overall_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:hint="total"
            android:layout_marginRight="20dp"/>

    </LinearLayout>


</LinearLayout>